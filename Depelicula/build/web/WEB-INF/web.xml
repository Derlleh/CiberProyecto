<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>servlet.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>agregar_pelicula</servlet-name>
        <servlet-class>servlet.agregar_pelicula</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>agregar_productora</servlet-name>
        <servlet-class>servlet.agregar_productora</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>listar_pelicula</servlet-name>
        <servlet-class>servlet.listar_pelicula</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>listar_productora</servlet-name>
        <servlet-class>servlet.listar_productora</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>eliminar_productora</servlet-name>
        <servlet-class>servlet.eliminar_productora</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>eliminar_pelicula</servlet-name>
        <servlet-class>servlet.eliminar_pelicula</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>modificar_productora</servlet-name>
        <servlet-class>servlet.modificar_productora</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>modificar_pelicula</servlet-name>
        <servlet-class>servlet.modificar_pelicula</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cerrar_session</servlet-name>
        <servlet-class>servlet.cerrar_session</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>agregar_pelicula</servlet-name>
        <url-pattern>/agregar_pelicula</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>agregar_productora</servlet-name>
        <url-pattern>/agregar_productora</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>listar_pelicula</servlet-name>
        <url-pattern>/listar_pelicula</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>listar_productora</servlet-name>
        <url-pattern>/listar_productora</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>eliminar_productora</servlet-name>
        <url-pattern>/eliminar_productora</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>eliminar_pelicula</servlet-name>
        <url-pattern>/eliminar_pelicula</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>modificar_productora</servlet-name>
        <url-pattern>/modificar_productora</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>modificar_pelicula</servlet-name>
        <url-pattern>/modificar_pelicula</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cerrar_session</servlet-name>
        <url-pattern>/cerrarsesion</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>
            login
        </welcome-file>
    </welcome-file-list>
</web-app>
